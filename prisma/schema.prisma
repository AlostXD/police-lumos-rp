generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Officer {
  id          Int       @id @default(autoincrement())
  name        String
  badgeNumber String   @unique

  @@map("officer")
}

model Crime {
  id          Int       @id @default(autoincrement())
  article     String    @unique
  title       String
  description String
  time        Int
  fine        Float
  fiance      Float
  financable  Boolean   @default(false)

  @@map("crime")
}